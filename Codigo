import mysql.connector

def obtener_ciudad():
    try:
        conexion = mysql.connector.connect(
            host="localhost",
            user="root",
            password="",  
            database="calidad_agua_irca"
        )

        cursor = conexion.cursor(dictionary=True)
        cursor.execute("SELECT * FROM calidad_del_agua_para_consumo_humano_en_colombia_20250514 LIMIT 5")
        ciudad = cursor.fetchall()

        conexion.close()
        
        print(" Conexi√≥n exitosa. Ejemplo de datos obtenidos:")
        for fila in ciudad:
            print(fila)
            
        return ciudad
    
    except mysql.connector.Error as error:
        print(" Error al conectar o consultar:", error)
        return None


obtener_ciudad()

